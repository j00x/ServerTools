<Page x:Class="ServerToolsUI.View.FirmwareUpdateView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ServerToolsUI"
      xmlns:validators="clr-namespace:ServerToolsUI.ViewModel.Validators"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="FirmwareUpdatePage"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.FontWeight="Medium"
      TextElement.FontSize="14"
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Row="1"
                      Grid.RowSpan="3"
                      ResizeDirection="Columns"
                      Width="5">
        </GridSplitter>
        <StackPanel Orientation="Horizontal">
            <Button Margin="15"
                    VerticalAlignment="Center"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{Binding BackCommand}"
                    materialDesign:HintAssist.Hint="Voltar">
                <materialDesign:PackIcon Kind="ArrowLeftCircleOutline"
                                         Width="auto"
                                         Height="auto"/>
            </Button>
            <TextBlock HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                   FontSize="28" Margin="15" 
                   Style="{DynamicResource MaterialDesignTitleTextBlock}" 
                   Grid.ColumnSpan="3">Update de Firmware</TextBlock>
        </StackPanel>

        <GroupBox Margin="15"
                  Grid.Row="1"
                  Grid.Column="1"
                  Style="{DynamicResource MaterialDesignCardGroupBox}" 
                  Header="Selecionar o Firmware" 
                  Background="Transparent">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Arquivo:" 
                               Style="{DynamicResource MaterialDesignBody1TextBlock}" 
                               Margin="5" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"/>
                <StackPanel Orientation="Horizontal" 
                            Grid.Column="1" 
                            HorizontalAlignment="Left">
                    <TextBox Style="{DynamicResource MaterialDesignTextBox}" 
                                 Width="200" Margin="5" 
                                 materialDesign:HintAssist.Hint="Local do arquivo" 
                                 VerticalAlignment="Center"
                             Text="{Binding FirmwarePath, ValidatesOnNotifyDataErrors=True}"/>
                    <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                            Margin="5" 
                            VerticalAlignment="Center"
                            Name="OpenFolderButton" 
                            Command="{Binding OpenFolderCommand}"
                            materialDesign:HintAssist.Hint="Selecionar Arquivo">
                        <materialDesign:PackIcon Kind="FileFindOutline" 
                                                 Width="auto" 
                                                 Height="auto"/>
                    </Button>
                </StackPanel>
                <TextBlock Text="Modo de instalação:" 
                               Style="{DynamicResource MaterialDesignBody1TextBlock}" 
                               Margin="5" Grid.Row="1" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Center"/>
                <ComboBox Style="{DynamicResource MaterialDesignFloatingHintComboBox}" 
                              Width="200" Margin="5" 
                              Grid.Row="1" Grid.Column="1" 
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center"
                              Name="ModeCombobox"
                              SelectedIndex="{Binding SelectedMode}">
                    <ComboBoxItem Content="Agora"/>
                    <ComboBoxItem Content="Agora e reiniciar"/>
                    <ComboBoxItem Content="Próximo boot"/>
                </ComboBox>
            </Grid>
        </GroupBox>
        <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}" 
                  Grid.Row="1"
                  Header="Adicionar Servidores" 
                  Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBox  Margin="5" Style="{DynamicResource MaterialDesignTextBox}" 
                              HorizontalAlignment="Left"
                              Width="200"
                              materialDesign:HintAssist.Hint="IP ou Hostname"                                   
                              VerticalAlignment="Center"
                              Text="{Binding Server}">
                    </TextBox>
                    <Button Name="AddServerButton" 
                            Style="{DynamicResource MaterialDesignFloatingActionButton}" 
                            Width="40" Height="40" 
                            HorizontalAlignment="Left" 
                            IsDefault="True"
                            VerticalAlignment="Center" Margin="5"
                            Command="{Binding AddServerCommand}"
                            materialDesign:HintAssist.Hint="Adicionar Servidor">
                        <materialDesign:PackIcon Kind="Plus" Width="auto" Height="auto"/>
                    </Button>
                    <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            ToolTip="Adicionar Lista"
                            Margin="5"
                            Command="{Binding OpenServerListCommand}">
                        <materialDesign:PackIcon 
                            Kind="FormatListNumbered"
                            Width="auto"
                            Height="auto"/>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>
        <materialDesign:Card Grid.Row="2"
                             Margin="15"
                             Width="auto"
                             Visibility="{Binding Path=NoServerCardVisible, Converter={StaticResource BoolToVis}}">
            <TextBlock
                VerticalAlignment="Center"
                Margin="15">
                Nenhum servidor adicionado.
            </TextBlock>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="2"
                             Margin="15"
                             Width="auto"
                             Visibility="{Binding Path=HasServers, Converter={StaticResource BoolToVis}}">
            <DataGrid Name="ServersDataGrid"
                      AutoGenerateColumns="False" 
                      Background="Transparent"
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False" 
                      CanUserResizeColumns="False"
                      IsReadOnly="True" MaxHeight="400"
                      ItemsSource="{Binding Servers, ValidatesOnNotifyDataErrors=True}">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        FontSize="12"
                        Binding="{Binding}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Name="DeleteButton" 
                                    VerticalAlignment="Center"
                                    Style="{DynamicResource MaterialDesignFlatButton}"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Page}}, Path=DataContext.RemoveServerCommand}"
                                    CommandParameter="{Binding }">
                                    <materialDesign:PackIcon Kind="MinusCircle" 
                                                Width="14" 
                                                Height="14" 
                                                Foreground="Red"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowHeight>
                    34
                </DataGrid.RowHeight>
            </DataGrid>
        </materialDesign:Card>

        <Button Name="UpdateButton" 
                Margin="15"
                Grid.Row="3"
                VerticalAlignment="Bottom"
                materialDesign:HintAssist.Hint="Iniciar Update"
                Command="{Binding UpdateFirmwareCommand}">
            Atualizar
        </Button>
        <materialDesign:Card
            Grid.Row="2"
            Grid.Column="1"
            Grid.RowSpan="2"
            Margin="15"
            Visibility="{Binding Path=NoJobCardVisible, Converter={StaticResource BoolToVis}}">
            <TextBlock
                VerticalAlignment="Center"
                Margin="15">
                Nenhum Job.
            </TextBlock>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="2"
                             Grid.Column="1"
                             Grid.RowSpan="2"
                             Margin="15"
                             Visibility="{Binding Path=HasJobs, Converter={StaticResource BoolToVis}}">
            <StackPanel Grid.Row="2"
                    Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="15"
                               VerticalAlignment="Center">
                        Jobs em Execução
                    </TextBlock>
                    <Button Margin="15"
                            Command="{Binding ClearJobsCommand}"
                            materialDesign:HintAssist.Hint="Limpar Jobs">
                        Limpar Jobs
                    </Button>
                </StackPanel>
                <DataGrid Name="JobsDataGrid"                 
                          Grid.Row="2"
                          Grid.Column="1"
                          Grid.RowSpan="2"
                          MaxHeight="300" 
                          Margin="15" 
                          HorizontalContentAlignment="Center"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"                          
                  ItemsSource="{Binding Monitor.Jobs}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Servidor" Binding="{Binding Server}"/>
                        <DataGridTextColumn Header="Serial" Binding="{Binding SerialNumber}"/>
                        <DataGridTextColumn Header="Job Id" Binding="{Binding JobId}"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding JobName}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding JobStatus}"/>
                        <DataGridTextColumn Header="% Concluido" Binding="{Binding JobPercentComplete}"/>
                        <DataGridTextColumn Header="Mensagem" Binding="{Binding JobMessage}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>
