<UserControl x:Class="ServerToolsUI.AddServerDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ServerToolsUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="ServerTextBox" materialDesign:HintAssist.Hint="Hostname ou IP" Margin="15"/>
        <TextBox Name="UserTextBox" Grid.Row="1" materialDesign:HintAssist.Hint="Usuario" Margin="15"/>
        <PasswordBox Name="PasswordTextBox" Grid.Row="2" materialDesign:HintAssist.Hint="Senha" Margin="15"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Button Margin="15" Command="materialDesign:DialogHost.CloseDialogCommand" >Adicionar</Button>
            <Button Margin="15" Command="materialDesign:DialogHost.CloseDialogCommand">Cancelar</Button>
        </StackPanel>
    </Grid>
</UserControl>
